@using Homefind.Web.Extensions;
@using Homefind.Core.DomainModels;
@using Homefind.Web.Models.ProfileViewModels;

@model DashboardViewModel

@{
    ViewData["Title"] = "Profile";
    ViewData["ListingHasNext"] = Model.Listings.HasNextPage ? "" : "disabled";
    ViewData["ListingHasPrevious"] = Model.Listings.HasPreviousPage ? "" : "disabled";
    ViewData["ReviewHasNext"] = Model.Reviews.HasNextPage ? "" : "disabled";
    ViewData["ReviewHasPrevious"] = Model.Reviews.HasPreviousPage ? "" : "disabled";
}

<!-- Page Banner Start -->
<div id="page-banner-area" class="page-banner">
    <div class="page-banner-title">
        <div class="text-center">
            <h2>Dashboard</h2>
            <a href="#"><i class="lni-home"></i> Profile</a>
            <span class="crumbs-spacer"><i class="lni-chevron-right"></i></span>
            <span class="current">Dashboard</span>
        </div>
    </div>
</div>
<!-- Page Banner End -->
<!-- Ueser Section Start -->
<section class="user-page section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-5 col-xs-12">
                <div class="user-profile-box">
                    <!--header -->
                    <div class="header clearfix">
                        <h2>@User.Identity.Name</h2>
                        <h4>Real Estate Agent</h4>
                        <img src="~/assets/img/avatar/profile-anonimous.png" alt="avatar" class="img-fluid profile-img">
                    </div>
                    <!-- Detail -->
                    <div class="detail clearfix">
                        <ul>
                            <li>
                                <a asp-controller="Profile" asp-action="Dashboard" class="active">
                                    <i class="lni-files"></i> Dashboard
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Profile" asp-action="MyProfile">
                                    <i class="lni-user"></i>Profile
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Profile" asp-action="MyFavourites">
                                    <i class="lni-heart"></i>Favorited Properties
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Property" asp-action="Submit">
                                    <i class="lni-plus"></i>Submit New Property
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-lg-8 col-md-7 col-xs-12">
                <div class="dashborad-box">
                    <h4 class="title">Manage Dashboard</h4>
                    <div class="section-body">
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="item">
                                    <div class="icon">
                                        <span class="lni-map-marker"></span>
                                    </div>
                                    <div class="info">
                                        <h6 class="number">12</h6>
                                        <p class="type">Listing</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="item">
                                    <div class="icon">
                                        <span class="lni-thumbs-up"></span>
                                    </div>
                                    <div class="info">
                                        <h6 class="number">30</h6>
                                        <p class="type">Review</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="item">
                                    <div class="icon">
                                        <span class="lni-comments"></span>
                                    </div>
                                    <div class="info">
                                        <h6 class="number">18</h6>
                                        <p class="type">Messages</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="dashborad-box">
                    <h4 class="title">Listing</h4>
                    <div class="section-body listing-table">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Listing Name</th>
                                        <th>Date Posted</th>
                                        <th>Rating</th>
                                        <th>Status</th>
                                        <th>Edit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var listing in Model.Listings)
                                    {
                                        <tr>
                                            <td>@listing.Title</td>
                                            <td>@listing.DatePosted.ToShortDateString()</td>
                                            <td class="rating"><span>4.3</span></td>
                                            <td class="status">
                                                @if (listing.Status == "1")
                                                {
                                                    <span class=" active">Active</span>}
                                                else
                                                {
                                                    <span class=" active">Inactive</span>
                                                }
                                            </td>
                                            <td class="edit">
                                                <a asp-action="EditListing" asp-controller="Profile"
                                                   asp-route-id="@listing.Id"><span class="lni-pencil"></span></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="pagination-container">
                        <nav>
                            <ul class="pagination">
                                <li class="page-item">
                                    <a class="btn btn-common @ViewData["ListingHasPrevious"]"
                                       asp-action="Dashboard"
                                       asp-route-listingPage="@(Model.Listings.PageIndex - 1)"
                                       asp-route-reviewPage="@Model.Reviews.PageIndex">
                                        <i class="lni-chevron-left"></i> Previous
                                    </a>
                                </li>
                                @for (int i = 1; i <= Model.Listings.TotalPages; i++)
                                {
                                    <li class="fav page-item">
                                        @if (Model.Listings.PageIndex == i)
                                        {
                                            <a class="page-link page-selected"
                                               asp-action="Dashboard"
                                               asp-route-reviewPage="@Model.Reviews.PageIndex"
                                               asp-route-listingPage="@i">@i</a>
                                        }
                                        else
                                        {
                                            <a class="page-link"
                                               asp-action="Dashboard"
                                               asp-route-reviewPage="@Model.Reviews.PageIndex"
                                               asp-route-listingPage="@i">@i</a>
                                        }
                                    </li>
                                }
                                <li class="page-item">
                                    <a class="btn btn-common @ViewData["ListingHasNext"]"
                                       asp-action="Dashboard"
                                       asp-route-reviewPage="@Model.Reviews.PageIndex"
                                       asp-route-listingPage="@(Model.Listings.PageIndex + 1)">
                                        Next
                                        <i class="lni-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
                <div class="dashborad-box">
                    <h4 class="title">Reviews</h4>
                    <div class="section-body">
                        <div class="reviews">
                            @foreach (var review in Model.Reviews)
                            {
                                <div class="review">
                                    <div class="thumb">
                                        <img class="img-fluid" src="~/assets/img/avatar/profile-anonimous.png" alt="">
                                    </div>
                                    <div class="body">
                                        <h6>
                                            @review.ReviewerName
                                            <span class="stars">
                                                <i class="lni-star-filled"></i>
                                                <i class="lni-star-filled"></i>
                                                <i class="lni-star-filled"></i>
                                                <i class="lni-star"></i>
                                                <i class="lni-star"></i>
                                            </span>
                                        </h6>
                                        <p class="post-time">@review.DateFormatted</p>
                                        <p class="content">@review.Comment</p>
                                        <div class="controller">
                                            <ul>
                                                <li><a href="#"><i class="lni-check-box"></i></a></li>
                                                <li><a href="#"><i class="lni-pencil-alt"></i></a></li>
                                                <li><a href="#"><i class="lni-reply"></i></a></li>
                                                <li><a href="#"><i class="lni-trash"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="pagination-container">
                            <nav>
                                <ul class="pagination">
                                    <li class="page-item">
                                        <a class="btn btn-common @ViewData["ReviewHasPrevious"]"
                                           asp-action="Dashboard"
                                           asp-route-listingPage="@Model.Listings.PageIndex"
                                           asp-route-reviewPage="@(Model.Reviews.PageIndex - 1)">
                                            <i class="lni-chevron-left"></i> Previous
                                        </a>
                                    </li>
                                    @for (int i = 1; i <= Model.Reviews.TotalPages; i++)
                                    {
                                        <li class="fav page-item">
                                            @if (Model.Reviews.PageIndex == i)
                                            {
                                                <a class="page-link page-selected"
                                                   asp-action="Dashboard"
                                                   asp-route-listingPage="@Model.Listings.PageIndex"
                                                   asp-route-reviewPage="@i">@i</a>
                                            }
                                            else
                                            {
                                                <a class="page-link"
                                                   asp-action="Dashboard"
                                                   asp-route-listingPage="@Model.Listings.PageIndex"
                                                   asp-route-reviewPage="@i">@i</a>
                                            }
                                        </li>
                                    }
                                    <li class="page-item">
                                        <a class="btn btn-common @ViewData["ReviewHasNext"]"
                                           asp-action="Dashboard"
                                           asp-route-listingPage="@Model.Listings.PageIndex"
                                           asp-route-reviewPage="@(Model.Reviews.PageIndex + 1)">
                                            Next
                                            <i class="lni-chevron-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Ueser Section End -->