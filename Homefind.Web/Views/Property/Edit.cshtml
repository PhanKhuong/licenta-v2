@using Homefind.Core.Constants
@model Homefind.Core.DomainModels.EstateUnit

@{
    ViewData["Title"] = "SubmitProperty";
}

@section Scripts{
    <script src="~/Scripts/imageUploader.js"></script>
}

@section Styles{
    <link href="~/assets/css/imageUploader.css" rel="stylesheet" />
}

<section class="user-page submit-property section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="notification-box mb-5">
                    <h3>Don't Have an Account?</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean ac tortor at tellus feugiat congue quis ut nunc. Semper ac dolor vitae accumsan.</p>
                </div>

                @*<div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Thank you!</strong> Your property was successfully submited.
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>*@

                <div class="submit-form">
                    <form asp-action="Edit" asp-controller="Property" method="post" enctype="multipart/form-data">
                        <h3 class="heading">Basic Information</h3>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Property Title</label>
                                    <input asp-for="Title" type="text" class="form-control" placeholder="Property Title" required>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="form-group">
                                    <label>Status</label>
                                    <select asp-for="Reason" class="classic">
                                        <option value="@ListingType.Rental">@EnumHelper.GetDescription(ListingType.Rental)</option>
                                        <option value="@ListingType.Selling">@EnumHelper.GetDescription(ListingType.Selling)</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="form-group">
                                    <label>Price</label>
                                    <input asp-for="Price" class="form-control" placeholder="USD" required>
                                </div>
                            </div>
                        </div>
                        <h3 class="heading">Property Gallery</h3>
                        <div class="row mb-3">
                            <div class="col-lg-12">
                                <fieldset class="form-group">
                                    <input class="form-control" asp-for="EstateImages" type="file" id="images" name="images" multiple required>
                                </fieldset>
                                <div class="image-container">
                                    @foreach(var image in Model.EstateImages)
                                    {
                                        <div class="preview-image">
                                            <div class="image-zone">
                                                <img src='@Url.Action("ViewImage", "Property", new { imageId = image.Id })' />
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <h3 class="heading">Detailed Information</h3>
                        <div class="row mb-3">
                            <div class="col-lg-12">
                                <div class="form-group message">
                                    <label>Detailed Information</label>
                                    <textarea asp-for="Description" class="form-control" placeholder="Detailed Information" required></textarea>
                                </div>
                            </div>
                        </div>

                        <h3 class="heading">Features (optional)</h3>
                        <div class="row mb-3">
                            <div class="col-lg-4 col-md-4">
                                <div class="form-group">
                                    <div class="form-check">
                                        <input asp-for="EstateFeature.HasCarParking" class="form-check-input" type="checkbox" id="free-parking">
                                        <label class="form-check-label" for="free-parking">Car parking</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-check">
                                        <input asp-for="EstateFeature.HasInternet" class="form-check-input" type="checkbox" id="has-internet">
                                        <label class="form-check-label" for="has-internet">Internet</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-check">
                                        <input asp-for="EstateFeature.HasTv" class="form-check-input" type="checkbox" id="has-tv">
                                        <label class="form-check-label" for="has-tv">TV</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4">
                                <div class="form-group">
                                    <div class="form-check">
                                        <input asp-for="EstateFeature.IsFurnished" class="form-check-input" type="checkbox" id="is-furnished">
                                        <label class="form-check-label" for="is-furnished">Furnished</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-check">
                                        <input asp-for="EstateFeature.HasAirConditioning" class="form-check-input" type="checkbox" id="air-condition">
                                        <label class="form-check-label" for="air-condition">Air conditioning</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4">
                                <div class="form-group">
                                    <div class="form-check">
                                        <input asp-for="EstateFeature.HasSwimmingPool" class="form-check-input" type="checkbox" id="swimming-pool">
                                        <label class="form-check-label" for="swimming-pool">Swimming pool</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-check">
                                        <input asp-for="EstateFeature.ArePetsAllowed" class="form-check-input" type="checkbox" id="allow-pets">
                                        <label class="form-check-label" for="allow-pets">Pets allowed</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <input type="submit" value="Save changes" class="btn btn-common" />
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>

