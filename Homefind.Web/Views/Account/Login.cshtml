@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using Homefind.Infrastructure.Identity
@using Homefind.Web.Models.AccountViewModels;
@using Microsoft.AspNetCore.Identity;

@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager
<!-- Page Banner Start -->
<div id="page-banner-area" class="page-banner">
    <div class="page-banner-title">
        <div class="text-center">
            <h2>Log</h2>
            <a href="#"><i class="lni-home"></i> Home</a>
            <span class="crumbs-spacer"><i class="lni-chevron-right"></i></span>
            <span class="current">Log</span>
        </div>
    </div>
</div>
<!-- Page Banner End -->
<!-- Content section Start -->
<section id="content" class="section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-6 col-xs-12">
                <div class="page-login-form box">
                    <h3>
                        Login
                    </h3>
                    <form class="login-form" asp-action="Login" asp-controller="Account">
                        <div class="form-group">
                            <div class="input-icon">
                                <i class="lni-user"></i>
                                <input asp-for="Email" type="text" id="sender-email" class="form-control" name="email" placeholder="Username">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-icon">
                                <i class="lni-lock"></i>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                            </div>
                        </div>
                        <div class="form-group">
                            <input asp-for="RememberMe" type="checkbox" name="rememberme" value="forever"> Keep Me Signed In
                        </div>
                        <button type="submit" class="btn btn-common log-btn">Submit</button>
                    </form>
                    <ul class="form-links">
                        <li class="text-center"><a href="signup.html">Don't have an account?</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Content section End -->

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
